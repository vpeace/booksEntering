<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_rv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp">



            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:padding="10sp">


                <TextView
                    android:id="@+id/lawyer_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/lawyer_location_tv"
                    android:layout_toStartOf="@+id/lawyer_location_tv"
                    android:hint="Lawyer name"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lawyer_position_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lawyer_name_tv"
                    android:hint="Jr."
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lawyer_study_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lawyer_position_tv"
                    android:hint="Criminal law"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lawyer_location_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/lawyer_name_tv"
                    android:hint=""
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/total_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lawyer_study_tv"
                    android:text="Total:"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/status_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/total_tv"
                    android:text="Status:"
                    android:textSize="20sp" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10sp"
        android:background="#f5f5f5" />
    <include layout="@layout/custom_progress_bar"></include>

</LinearLayout>